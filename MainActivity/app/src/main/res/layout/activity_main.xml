<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        tools:context=".MainActivity"
        android:background="@color/dark_grey_background">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/black">

        <ImageButton

                android:id="@+id/buttonMenuUsuario"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="0dp"
                android:background="@drawable/circle_background"
                android:clipToOutline="true"
                android:layout_marginEnd="10dp"
                android:contentDescription="Acesso ao menu do utilizador"
                android:src="@drawable/ic_userv2_projectdroid"
                android:scaleType="fitCenter"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_titulov3_projectdroid"
                android:scaleType="fitCenter"

                />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintBottom_toTopOf="@id/bottombar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

    />

    <LinearLayout
            android:id="@+id/bottombar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/bottombar_shape"
            android:orientation="horizontal"

            app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
                android:id="@+id/reviews_button"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Botão reviews"
                android:src="@drawable/ic_reviewsv3_projectdroid"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>


        <ImageButton
                android:id="@+id/tracking_button"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Botão tracking"
                android:src="@drawable/ic_trackingv2_projectdroid"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>

        <ImageButton
                android:id="@+id/home_button"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Botão home  "
                android:src="@drawable/ic_homev2_projectdroid"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>

        <ImageButton
                android:id="@+id/watchlist_button"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Botão watchlist"
                android:src="@drawable/ic_watchlistv2_projectdroid"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>

        <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Botão definições"
                android:src="@drawable/ic_settingsv2_projectdroid"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
